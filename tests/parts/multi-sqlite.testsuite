# # ## ### ##### ######## ############# #####################
## Test suite for sqlite stores, custom parts.
#
## The external procedures 'already' and 'badmethod' are used to
## generate implementation specific error messages. Implementations
## have to be provided by the invoking implementation-specific
## testsuite.
#
## The external procedures 'new-store' and 'release-store' are used to
## create and destroy aqn instance of the store under test.

# # ## ### ##### ######## ############# #####################

test phash::multi::sqlite-1.0 {new, wrong#args, not enough} -body {
    phash::multi::sqlite new
} -returnCodes error -result {wrong # args: should be "phash::multi::sqlite new database table"}

test phash::multi::sqlite-1.1 {new, wrong#args, not enough} -body {
    phash::multi::sqlite new D
} -returnCodes error -result {wrong # args: should be "phash::multi::sqlite new database table"}

test phash::multi::sqlite-1.2 {new, wrong#args, too many} -body {
    phash::multi::sqlite new D T X
} -returnCodes error -result {wrong # args: should be "phash::multi::sqlite new database table"}

test phash::multi::sqlite-1.3 {create, wrong#args, not enough} -body {
    phash::multi::sqlite create foo
} -returnCodes error -result {wrong # args: should be "phash::multi::sqlite create foo database table"}

test phash::multi::sqlite-1.4 {create, wrong#args, not enough} -body {
    phash::multi::sqlite create foo D
} -returnCodes error -result {wrong # args: should be "phash::multi::sqlite create foo database table"}

test phash::multi::sqlite-1.5 {create, wrong#args, too many} -body {
    phash::multi::sqlite create foo D T X
} -returnCodes error -result {wrong # args: should be "phash::multi::sqlite create foo database table"}

test phash::multi::sqlite-1.6 {constructor, create, existing command} -setup {
    sqlite3 DB :memory:
    phash::multi::sqlite create myasqlite DB foo
} -body {
    phash::multi::sqlite create myasqlite DB foo
} -cleanup {
    myasqlite destroy
    DB close
} -returnCodes error -result [already myasqlite]

test phash::multi::sqlite-1.7 {constructor, create, existing command} -setup {
    sqlite3 DB :memory:
} -body {
    phash::multi::sqlite create set DB foo
} -cleanup {
    DB close
} -returnCodes error -result [already set]

test phash::multi::sqlite-1.8 {constructor, create} -setup {
    set result {}
    sqlite3 DB :memory:
} -body {
    lappend result [phash::multi::sqlite create myasqlite DB foo]
    lappend result [info commands ::myasqlite]
    lappend result [myasqlite size]
} -cleanup {
    myasqlite destroy
    DB close
    unset result
} -result {::myasqlite ::myasqlite 0}

test phash::multi::sqlite-1.9 {constructor, new} -setup {
    set result {}
    sqlite3 DB :memory:
} -body {
    lappend result [set foo [phash::multi::sqlite new DB foo]]
    lappend result [info commands ::$foo]
    lappend result [$foo size]
} -cleanup {
    $foo destroy
    DB close
    unset result foo
} -match glob -result {::oo::Obj* ::oo::Obj* 0}

# # ## ### ##### ######## ############# #####################
return
